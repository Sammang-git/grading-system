# =====================================================
# CS425 Assignment Grading System - Environment Variables
# =====================================================
# Copy this file to .env and customize for your environment.
# DO NOT commit .env to version control.
# =====================================================

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database Settings (for Docker)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=grading_system
DB_USER=grading_user
DB_PASS=grading_password

# Database Settings (for XAMPP - uncomment if using XAMPP)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=grading_system
# DB_USER=root
# DB_PASS=

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,zip,rar

# Session Settings
SESSION_LIFETIME=120
